<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- The seven options for the standalone mode -->
    <com.roughike.swipeselector.SwipeSelector
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ssStandaloneModeSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:swipe_indicatorMargin="12dp"
        app:swipe_indicatorInActiveColor="@color/colorMisterGrey"
        app:swipe_indicatorActiveColor="@color/colorPrimaryDark" />

    <!-- The action buttons OK/CANCEL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Padder -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Cancel -->
        <Button
            android:id="@+id/btCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/borderlessButtonStyle"
            android:text="@string/dialog_negative_button"
            android:textColor="@color/colorAccent"/>

        <!-- Apply -->
        <Button
            android:id="@+id/btCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/borderlessButtonStyle"
            android:text="@string/dialog_positive_button"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</LinearLayout>